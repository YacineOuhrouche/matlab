%% amplitude modulation

clc; clear; close all; 

%parameters
Fs = 50000; % sampling frequency
t= 0:1/Fs:0.01; %time vector
Am = 1; % message amplitude
Ac = 2; % carrier amplitude
fm = 200; %message frequency
fc=2000; % carrier frequency
ka =0.7; %modylation index


%signals 
m = Am*sin(2*pi*fm*t);
c=Ac*cos(2*pi*fc*t);

%am signal
s_am = (Ac + ka*m).*cos(2*pi*fc*t);

%am waveform
figure('Name','AM signal', 'NumberTitle','')